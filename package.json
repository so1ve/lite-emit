{
  "name": "lite-emit",
  "version": "2.1.0",
  "packageManager": "pnpm@7.32.5",
  "author": "Ray <i@mk1.io> (@so1ve)",
  "description": "A simple, lightweight, and fast event emitter.",
  "keywords": [
    "EventEmitter",
    "EventEmitter2",
    "EventEmitter3",
    "Events",
    "addEventListener",
    "addListener",
    "emit",
    "on",
    "emits",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "homepage": "https://github.com/so1ve/lite-emit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/so1ve/lite-emit.git"
  },
  "bugs": {
    "url": "https://github.com/so1ve/lite-emit/issues"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && puild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "puild --watch"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.3",
    "@babel/types": "^7.21.4",
    "@so1ve/eslint-config": "^0.92.0",
    "@types/node": "^18.15.11",
    "bumpp": "^9.1.0",
    "eslint": "^8.38.0",
    "jiti": "^1.18.2",
    "pnpm": "^7.32.0",
    "puild": "^1.3.2",
    "rimraf": "^5.0.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitest": "^0.31.0"
  }
}
