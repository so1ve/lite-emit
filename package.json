{
	"name": "lite-emit",
	"version": "2.3.0",
	"packageManager": "pnpm@10.24.0",
	"author": "Ray <i@mk1.io> (@so1ve)",
	"type": "module",
	"description": "A simple, lightweight, and fast event emitter.",
	"keywords": [
		"EventEmitter",
		"EventEmitter2",
		"EventEmitter3",
		"Events",
		"addEventListener",
		"addListener",
		"emit",
		"emits",
		"emitter",
		"event",
		"on",
		"pub/sub",
		"publish",
		"pubsub",
		"reactor",
		"subscribe"
	],
	"homepage": "https://github.com/so1ve/lite-emit#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/so1ve/lite-emit.git"
	},
	"bugs": {
		"url": "https://github.com/so1ve/lite-emit/issues"
	},
	"license": "MIT",
	"sideEffects": false,
	"exports": {
		".": "./dist/index.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "dist/index.d.ts",
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*",
				"./dist/index.d.ts"
			]
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"bench": "vitest bench",
		"build": "tsdown",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"prepublishOnly": "nr build",
		"release": "bumpp --commit --push --tag && pnpm publish",
		"test": "vitest",
		"typecheck": "tsgo --noEmit",
		"watch": "tsdown --watch"
	},
	"devDependencies": {
		"@antfu/ni": "^28.0.0",
		"@so1ve/eslint-config": "^3.17.0",
		"@so1ve/prettier-config": "^3.17.0",
		"@types/node": "^24.10.1",
		"@typescript/native-preview": "7.0.0-dev.20251206.1",
		"bumpp": "^10.3.2",
		"emittery": "^1.2.0",
		"eslint": "^9.39.1",
		"event-lite": "^1.0.0",
		"eventemitter3": "^5.0.1",
		"mitt": "^3.0.1",
		"nanoevents": "^9.1.0",
		"prettier": "^3.7.4",
		"tsdown": "^0.17.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.15"
	}
}
